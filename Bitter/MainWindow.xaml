<Window
    x:Class="Bitter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bitter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Bitter v1.0"
    Width="400"
    Height="450"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources />

    <Grid ShowGridLines="True">

        <TabControl Grid.Column="0">
            <TabItem
                x:Name="EncryptTab"
                FontFamily="{StaticResource JetBrainsMono}"
                Header="Encrypt">
                <StackPanel Margin="10,0,10,10">
                    <!--  Input File Section  -->
                    <StackPanel Margin="0,20">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontFamily="{StaticResource JetBrainsMono}"
                            FontSize="14"
                            FontWeight="Normal">
                            Input file:
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="EncryptInputFileBox"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Padding="8"
                                VerticalContentAlignment="Center"
                                FontFamily="{StaticResource JetBrainsMono}"
                                FontSize="14" />

                            <Button
                                x:Name="EncryptInputFileButton"
                                Grid.Column="1"
                                Padding="10,5"
                                Click="EncryptInputFileButton_OnClick"
                                Content="Browse..."
                                FontWeight="Bold"
                                Style="{StaticResource BlueButton}" />
                        </Grid>
                    </StackPanel>

                    <!--  Output File Section  -->
                    <StackPanel Margin="0,5,0,20">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontFamily="{StaticResource JetBrainsMono}"
                            FontSize="14"
                            FontWeight="Normal">
                            Output file:
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="EncryptOutputFileBox"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Padding="8"
                                VerticalContentAlignment="Center"
                                FontFamily="{StaticResource JetBrainsMono}"
                                FontSize="14" />

                            <Button
                                x:Name="EncryptOutputFileButton"
                                Grid.Column="1"
                                Padding="10,5"
                                Click="EncryptOutputFileButton_OnClick"
                                Content="Browse..."
                                FontWeight="Bold"
                                Style="{StaticResource BlueButton}" />
                        </Grid>
                    </StackPanel>

                    <!--  Progress Bar  -->
                    <ProgressBar
                        x:Name="EncryptProgressBar"
                        Height="10"
                        Margin="0,5,0,20"
                        Foreground="#FF6495ED"
                        Value="0" />

                    <!--  Encrypt Button  -->
                    <Button
                        x:Name="EncryptButton"
                        Margin="0"
                        Padding="15,8"
                        Click="EncryptButton_OnClick"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource RoundedBlueButton}">
                        Encrypt
                    </Button>

                    <!--  Log Box  -->
                    <Border
                        Margin="0,15,0,0"
                        Background="#FF1E1E1E"
                        CornerRadius="5">
                        <TextBlock
                            x:Name="EncryptLogBox"
                            Height="80"
                            Padding="10"
                            FontFamily="Consolas"
                            Foreground="#FFD4D4D4"
                            Text="Ready..." />
                    </Border>
                </StackPanel>
            </TabItem>

            <TabItem
                x:Name="DecryptTab"
                FontFamily="{StaticResource JetBrainsMono}"
                Header="Decrypt">

                <StackPanel Margin="10,5,10,10">
                    <!--  Input File Section  -->
                    <StackPanel Margin="0,20">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontFamily="{StaticResource JetBrainsMono}"
                            FontSize="14">
                            Input file:
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="DecryptInputFileBox"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Padding="8"
                                VerticalContentAlignment="Center"
                                FontFamily="{StaticResource JetBrainsMono}"
                                FontSize="14" />

                            <Button
                                x:Name="DecryptInputFileButton"
                                Grid.Column="1"
                                Padding="10,5"
                                Click="DecryptInputFileButton_OnClick"
                                Content="Browse..."
                                FontWeight="Bold"
                                Style="{StaticResource BlueButton}" />
                        </Grid>
                    </StackPanel>

                    <!--  Output File Section  -->
                    <StackPanel Margin="0,5,0,20">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontFamily="{StaticResource JetBrainsMono}"
                            FontSize="14">
                            Output file:
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="DecryptOutputFileBox"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                Padding="8"
                                VerticalContentAlignment="Center"
                                FontFamily="{StaticResource JetBrainsMono}"
                                FontSize="14" />

                            <Button
                                x:Name="DecryptOutputFileButton"
                                Grid.Column="1"
                                Padding="10,5"
                                Click="DecryptOutputFileButton_OnClick"
                                Content="Browse..."
                                FontWeight="Bold"
                                Style="{StaticResource BlueButton}" />
                        </Grid>
                    </StackPanel>

                    <!--  Progress Bar  -->
                    <ProgressBar
                        x:Name="DecryptProgressBar"
                        Height="10"
                        Margin="0,5,0,20"
                        Foreground="#FF6495ED"
                        Value="0" />

                    <!--  Encrypt Button  -->
                    <Button
                        x:Name="DecryptButton"
                        Margin="0"
                        Padding="15,8"
                        Click="DecryptButton_OnClick"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource RoundedBlueButton}">
                        Decrypt
                    </Button>

                    <!--  Log Box  -->
                    <Border
                        Margin="0,15,0,0"
                        Background="#FF1E1E1E"
                        CornerRadius="5">
                        <TextBlock
                            x:Name="DecryptLogBox"
                            Height="80"
                            Padding="10"
                            FontFamily="Consolas"
                            Foreground="#FFD4D4D4"
                            Text="Ready..." />
                    </Border>
                </StackPanel>
            </TabItem>

            <TabItem
                x:Name="SettingsTab"
                FontFamily="{StaticResource JetBrainsMono}"
                Header="Settings">
                <Grid ShowGridLines="True">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="15,10">
                        <TextBlock FontFamily="{StaticResource JetBrainsMono}" FontSize="14">
                            Encryption/Decryption Key:
                        </TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="KeyTextBox"
                                Grid.Column="0"
                                Margin="0,8"
                                Padding="8"
                                VerticalContentAlignment="Center"
                                FontSize="14" />

                            <Button
                                x:Name="GenerateKeyButton"
                                Grid.Column="1"
                                Margin="0,4"
                                Padding="10,5"
                                Click="GenerateKeyButton_OnClick"
                                Cursor="Hand"
                                FontSize="16"
                                FontWeight="Bold"
                                Style="{StaticResource BlueButton}">
                                Generate
                            </Button>
                        </Grid>
                    </StackPanel>

                    <Button
                        x:Name="ApplySettingsButton"
                        Grid.Row="1"
                        Margin="15,10"
                        Padding="0,8"
                        Click="ApplySettingsButton_OnClick"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource RoundedBlueButton}">
                        Apply Settings
                    </Button>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
